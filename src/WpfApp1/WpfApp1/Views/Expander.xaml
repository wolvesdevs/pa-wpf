<Window x:Class="WpfApp1.UI.Views.Expander"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.UI.Views"
        mc:Ignorable="d"
        Title="Expander" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Expander Header="TtitleA" Margin="10" IsExpanded="True" BorderBrush="Red">
                <StackPanel Margin="6" HorizontalAlignment="Left" Width="200">
                    <RadioButton Content="AAA" FontSize="20" FontFamily="Meiryo UI"/>
                    <RadioButton Content="BBB" FontSize="20" FontFamily="Meiryo UI"/>
                </StackPanel>
            </Expander>
            <Expander Header="TtitleB" Margin="10" IsExpanded="True" BorderBrush="Blue">
                <StackPanel Margin="6" HorizontalAlignment="Left" Width="200">
                    <RadioButton Content="CCC" FontSize="20" FontFamily="Meiryo UI"/>
                    <RadioButton Content="DDD" FontSize="20" FontFamily="Meiryo UI"/>
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Window>
