<Window x:Class="WpfApp1.UI.Views.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.UI.Views"
        mc:Ignorable="d"
        Title="Canvas" Height="300" Width="300">
    <Grid>
        <Canvas>
            <Rectangle Fill="Red" Width="100" Height="100" Canvas.Left="20" Canvas.Top="20" Panel.ZIndex="0"/>
            <Rectangle Fill="Green" Width="100" Height="100" Canvas.Left="20" Canvas.Bottom="30" Panel.ZIndex="2"/>
            <Rectangle Fill="Blue" Width="100" Height="100" Canvas.Right="100" Canvas.Bottom="100" Panel.ZIndex="1"/>
            <Button Canvas.Left="40" Canvas.Top="40" Content="AAA" FontSize="20"/>
        </Canvas>
    </Grid>
</Window>
