<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="ButtonBackground" Color="DarkBlue" />
        <SolidColorBrush x:Key="ButtonForeground" Color="White" />
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label x:Name="ResultLabel" Content="" Height="100" HorizontalAlignment="Center" FontSize="60" Background="{StaticResource backColor}" />
            <Button x:Name="AButton" Content="A" Height="50" FontSize="40" Background="{StaticResource ButtonBackground}" Foreground="{StaticResource ButtonForeground}" Click="AButton_Click" />
            <Button x:Name="ClearButton" Content="Clear" Height="50" FontSize="40" Background="{StaticResource ButtonBackground}" Foreground="{StaticResource ButtonForeground}" Click="ClearButton_Click" />
        </StackPanel>
     </Grid>
</Window>
